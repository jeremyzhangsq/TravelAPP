/* pages/reserve/reserve.wxss */

.photo{
  background-color: #ffffff;
  display: flex;
  width: 100%;
  height: 40%;
}
.item{
  background-color: #ffffff;
  display: flex;
  width: 100%;
  flex-direction: row;
  height: 8%;
}
 .icon{
   /* display: flex; */
   width: 50rpx;
   height: 50rpx;
   margin: 20rpx 10rpx 10rpx 10rpx;  
 }
 .txt{
   display: flex;
   width: 120rpx;
   height: 80rpx;
   font-size: 32rpx;
   line-height: 1; 
   text-align: center;
 }
.input{
   display: flex;
   width: 500rpx;
   height: 80rpx;
   font-size: 32rpx;
 }
 .search_arr {  
  border: 1px solid #d0d0d0;  
  border-radius: 5rpx;  
  font-size: 32rpx;
  margin: 10rpx 10rpx 10rpx 10rpx;   
} 
.pickers {  
  border: 1px solid #d0d0d0;  
  border-radius: 5rpx;  
  font-size: 32rpx;
  width: 500rpx;
  height: 80rpx;
  line-height: 2.5; 
  margin: 10rpx 10rpx 10rpx 10rpx;   
} 
.submit{
  background-color: #ffffff;
  display: flex;
  width: 100%;
  flex-direction: row;
  font-size: 32rpx;
  margin: 35rpx 10rpx 10rpx 10rpx;   
  height: 8%;
}